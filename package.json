{
  "name": "thoth-server",
  "version": "0.0.1",
  "description": "server side of the toth project.",
  "author": "Estevan Martins <estevandias7@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=\"development\" tsx --watch src/server.ts",
    "dev:docker": "NODE_ENV=\"development\" DB_HOST=\"thoth-database\" tsx --watch src/server.ts",
    "migration:create": "typeorm-ts-node-esm migration:create",
    "migration:gen": "typeorm-ts-node-esm migration:generate -d src/dataSource.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/dataSource.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d src/dataSource.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "yup": "^1.4.0"
  },
  "resolutions": {
    "rimraf": "^5.0.7",
    "glob": "^10.4.2"
  },
  "overrides": {
    "rimraf": "^5.0.7",
    "glob": "^10.4.2"
  }
}
